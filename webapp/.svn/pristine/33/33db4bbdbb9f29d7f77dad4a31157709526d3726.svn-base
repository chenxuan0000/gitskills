<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="renderer" content="webkit">
    <title>资源详情</title>
    <script src="../../js/cssboot.js"></script>
    <script>
    SrcBoot.output([
        'js/lib/source/jquery.fancybox.css',
        'js/lib/source/helpers/jquery.fancybox-buttons.css',
        './css/resource-detail.css'
    ]);
    </script>
</head>

<body>
    <!-- 头 -->
    <div id="header" class="header container"></div>
    <!-- 内容 -->
    <div class="main">
        <div class="container" id="main">
        </div>
    </div>
    <!-- 尾 -->
    <div id="footer" class="footer"></div>
    <!--模板-->
    <script type="text/x-template" id="tmpl">
        <div class="now-pos">
            <a href="standard.html">全部资源</a><span class="gt">&gt;</span>{{#Label.Category}}<a href="standard.html?tab={{tabType}}">{{CategoryName}}</a>{{/Label.Category}}<span class="gt">&gt;</span><span class="cur">{{Title}}</span>
        </div>
        <div class="intro-detail clearfix">
            <div class="left">
                <img src="{{ListImgUrl}}">
            </div>
            <div class="right">
                <p class="item-name">{{Title}}</p>
                <p class="item-label">标签：{{#Label.Category}}<a href="standard.html?tab={{tabType}}" class="blue">{{CategoryName}}</a>{{/Label.Category}}
                {{#Label.ResourceTypeList.Info}}<a href="standard.html?value={{value}}&tab={{tabType}}" class="blue">{{text}}</a>{{/Label.ResourceTypeList.Info}}</p>
                <div class="right-block">
                    <ul>
                        <li class="clearfix">
                            <div class="one">素材信息</div>
                            <div class="two">{{MaterialType}}</div>
                        </li>
                        <li class="clearfix">
                            <div class="one">维护人</div>
                            <div class="two">{{CauseMemberName}}</div>
                        </li>
                        <li class="clearfix">
                            <div class="one"></div>
                            <div class="two"></div>
                        </li>
                        <li class="clearfix">
                            <div class="one"></div>
                            <div class="two"></div>
                        </li>
                    </ul>
                </div>
                <div class="right-download">
                    <a href="#bigDown" class="down">全部资源</a><span>下载量：{{DownNum}}次</span>
                </div>
            </div>
        </div>
        <!-- 图片展示 -->
        {{^InfoContent}}
        <div class="img-list">没有正文</div>
        {{/InfoContent}}
        {{#InfoContent}}
        <div class="img-list">{{{InfoContent}}}</div>
        {{/InfoContent}}
        <!-- 案例附件下载 -->
        {{^SingleAttachList}}
        <div class="ht50">
            <div id="bigDown" class="bigFile-download clearfix">
                <div class="left-list">
                    <ul class="clearfix">
                        <li class="name-cur">无附件</li>
                    </ul>
                </div>
            </div>
        </div>
        {{/SingleAttachList}} {{#SingleAttachList}}
        <div class="ht50">
            <div id="bigDown" class="bigFile-download clearfix">
                <div class="left-list">
                    <ul class="clearfix">
                        <li class="name-cur">附件</li>
                        {{#AttachItem}}
                        <li>
                            <span class="single-down" data-type="{{InfoGuid}}" data-id="{{AttachUrl}}">{{AttachFileName}}</span>
                        </li>
                        {{/AttachItem}}
                    </ul>
                </div>
                <a href="{{PackageAttachUrl}}" class="all-dn">一键下载</a>
            </div>
        </div>
        {{/SingleAttachList}}
        <!-- 上一个下一个案例 -->
        <div class="pre-next clearfix" id="pre-next">
            {{^PrevInfo.Title}}
            <span class="pre">已经是第一条了</span>{{/PrevInfo.Title}} {{#PrevInfo.Title}}
            <a href="javascript:void(0);" data-id="{{PrevInfo.InfoGuid}}"class="pre">{{PrevInfo.Title}}</a>{{/PrevInfo.Title}} {{^NextInfo.Title}}
            <span class="next">已经是最后一条了</span>{{/NextInfo.Title}} {{#NextInfo.Title}}
            <a href="javascript:void(0);" data-id="{{NextInfo.InfoGuid}}" class="next">{{NextInfo.Title}}</a>{{/NextInfo.Title}}
        </div>
        <!-- 返回顶部 -->
        <div class="back-top" id="backTop">
        </div>
    </script>
    <script src="../../js/jsboot.js"></script>
    <script>
    SrcBoot.output([
        'js/lib/source/jquery.fancybox.js',
        'js/lib/source/helpers/jquery.fancybox-buttons.js',
        'js/lib/bootstrap.min.js',
        './js/resource-detail.js'
    ]);
    </script>
</body>

</html>
